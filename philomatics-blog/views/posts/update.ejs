<%- include("../main/htmlStart") %>
<div class="form-container">
  <form method="POST" action="/posts/update">
    <label for="title">Post Title</label>
    <input class="blog-input blog-input--title" type="text" name="title" value="<%=title%>"/>
    <label for="title">Post Content</label>
    <textarea class="blog-input blog-input--content" name="content" cols="30" rows="10"><%=content%></textarea>
    <p class="help-text">Recommended: min. 400 Words</p>
    <input type="hidden" name="id" value="<%=id%>" />
    <input type="submit" value="Update Post" />
  </form>
</div>
<%- include("../main/htmlEnd") %>
